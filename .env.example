# =============================================================================
# PayPlanner Environment Configuration
# =============================================================================
# Скопируйте этот файл в .env и заполните значения
# Для разработки: используйте с docker-compose.dev.yml
# Для продакшена: используйте с docker-compose.prod.yml
# =============================================================================

# -----------------------------------------------------------------------------
# Telegram Bot Configuration
# -----------------------------------------------------------------------------
# Получите токен у @BotFather: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Username вашего бота (без @)
VITE_TELEGRAM_BOT_USERNAME=your_bot_username

# -----------------------------------------------------------------------------
# Security Keys
# -----------------------------------------------------------------------------
# Сгенерируйте с помощью:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# JWT Secret (минимум 32 символа)
JWT_SECRET=your_jwt_secret_here

# Encryption Key (64 символа hex = 32 байта)
ENCRYPTION_KEY=your_encryption_key_here

# -----------------------------------------------------------------------------
# URLs
# -----------------------------------------------------------------------------
# URL фронтенда (обязательно HTTPS для Telegram Mini App)
WEB_APP_URL=https://your-domain.com

# URL API для фронтенда
VITE_API_URL=https://your-domain.com/api

# -----------------------------------------------------------------------------
# Database Configuration (Production)
# -----------------------------------------------------------------------------
# Для docker-compose.prod.yml - используйте эти значения
# Для docker-compose.dev.yml - значения ниже уже установлены в файле

POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=payplanner

# -----------------------------------------------------------------------------
# Redis Configuration (Production)
# -----------------------------------------------------------------------------
# Для docker-compose.prod.yml - установите пароль для безопасности
# Для docker-compose.dev.yml - можно оставить пустым

REDIS_PASSWORD=your_redis_password_here

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Разрешенные домены для CORS (через запятую)
# Пример: https://domain1.com,https://domain2.com
ALLOWED_ORIGINS=https://your-domain.com

# -----------------------------------------------------------------------------
# Development Only (for docker-compose.dev.yml)
# -----------------------------------------------------------------------------
# Эти значения можно использовать для локальной разработки:
#
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_DB=payplanner
# REDIS_PASSWORD=
# WEB_APP_URL=http://localhost:3001
# VITE_API_URL=http://localhost:3000/api
# ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000